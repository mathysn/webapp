<!DOCTYPE html>
<html>
    <head>
        <!-- SETUP -->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- STYLE -->
        <link rel="stylesheet" href="/static/style/navbar.css">
        <link rel="stylesheet" href="/static/style/register.css">
        <link rel="stylesheet" href="/static/style/root.css">

        <!-- TITLE -->
        <title>Register - Mathys NOURRY</title>

        <!-- JS / RECAPTCHA -->
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>

        <!-- FONTS -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

        <!-- ICONS -->
        <script src="https://kit.fontawesome.com/500432588b.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar">
            <ul class="nav-list nav-list-left">
                <li class="nav-item"><a class="animated" href="/home">Home</a></li>
                <li class="nav-item"><a class="animated" href="/about">About</a></li>
                <li class="nav-item"><a class="animated" href="/cv">CV</a></li>
                <li class="nav-item"><a class="animated" href="/portfolio">Portfolio</a></li>
                <li class="nav-item"><a class="animated-icon" href="https://github.com/mathysn" target="_blank"><i class="fa-brands fa-github"></i></a></li>
            </ul>
            <ul class="nav-list nav-list-right">
                <li class="nav-item"><a class="animated" href="/login">Login</a></li>
                <li class="nav-item"><a class="animated active" href="/register">Register</a></li>
            </ul>
        </nav>

        <script>
            function handleFormSubmit() {
                document.getElementById('recaptchaResponse').value = grecaptcha.getResponse();
            }
        </script>

        <div class="container">
            <div class="register-form">
                <h2>Register</h2>
                <form id="register-form" action="/register" method="POST">
                    <% if(errMsg !== null) { %>
                        <div class="error-message">
                            <p><%- errMsg %></p>
                        </div>
                    <% } %>
                    <label for="email">Email:</label>
                    <% if (email === null) { %>
                        <input type="email" id="email" name="email" required>
                    <% } else { %>
                        <input type="email" id="email" name="email" value="<%= email %>" required>
                    <% } %>

                    <label for="username">Username:</label>
                    <% if (username === null) { %>
                        <input type="text" id="username" name="username" required>
                    <% } else { %>
                        <input type="text" id="username" name="username" value="<%= username %>" required>
                    <% } %>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>

                    <div class="g-recaptcha" data-sitekey="6LfnUvMmAAAAAEvImDAGg6Kf5xmWARF9cZ0oqjZ_"></div>
                    <input type="hidden" name="recaptchaResponse" id="recaptchaResponse">

                    <button type="submit" onclick="handleFormSubmit()">Register</button>
                    <a id="yes-account" href="/login">Already have an account? Login now!</a>
                </form>
            </div>
        </div>

        <footer class="footer">
            <p>&copy; 2023 sij's test app. All rights reserved.</p>
        </footer>
    </body>
</html>